html(lang="en")
  head
    title ProteinCT
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet' href='/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/style.css')
    script(type='text/javascript' src="/jquery/jquery.min.js")
    script(src='https://js.stripe.com/v3/')
  body
    .container-fluid
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/users/dashboard')
          img(src='/images/protein_ct_small.png')
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse.w-100.order-1.order-md-0.dual-collapse2
          if user
            ul.navbar-nav.mr-auto
              if user.account_type === "seller"
                li.nav-item
                  a.nav-link(href='/users/view') Clients
                li.nav-item
                  a.nav-link(href='/order') Orders
                li.nav-item
                  a.nav-link(href='/inventory') Inventory
              else
                li.nav-item
                  a.nav-link(href='/order/inquire') New Order 
            ul.navbar-nav.ml-auto
              if user.account_type === "client"
                li.nav-item
                  a.nav-link(href='/users/contact')
                      span.fas.fa-envelope
                      |  Contact
              li.nav-item.dropdown
                a#dropdown.nav-link.droptown-toggle(href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                  span.fas.fa-user
                  |  Profile
                .dropdown-menu.dropdown-menu-right(aria-labelledby="dropdown")
                  a.dropdown-item(href='/users/account') My Account
                  a.dropdown-item(href='/users/logout') Logout
          else
            ul.navbar-nav.ml-auto
              a.nav-link(href='/users/register') Register
              a.nav-link(href='/users/login') Login
    .container-fluid(style="marign: 5px;")
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class='alert alert-danger') #{error.msg}
      block content
    #footer.container-fluid
      br
      hr
      footer
        p Copyright &copy; 2019
  script(src='/popper/popper.min.js')
  script(src='/bjs/bootstrap.min.js')
  script(src="https://kit.fontawesome.com/7b14ff4587.js" crossorigin="anonymous")