html(lang="en")
  head
    title ProteinCT
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet' href='/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/style.css')
    script(type='text/javascript' src="/jquery/jquery.min.js")
  body
    .container-fluid
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/users/dashboard') CORPSE
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse.w-100.order-1.order-md-0.dual-collapse2
          if user
            ul.navbar-nav.mr-auto
              if user.account_type === "seller"
                li.nav-item
                  a.nav-link(href='/users/view') Clients
                li.nav-item
                  a.nav-link(href='/order') Orders
                li.nav-item
                  a.nav-link(href='/inventory') Inventory
              else
                li.nav-item
                  a.nav-link(href='/order/inquire') New Order
                li.nav-item
                  a.nav-link(href='/payment/checkout') Checkout  
            ul.navbar-nav.ml-auto
              a.nav-link(href='/users/contact')
                  span.fas.fa-envelope
                  |  Contact
              li.nav-item.dropdown
                a#dropdown.nav-link.droptown-toggle(href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
                  span.fas.fa-user
                  |  Profile
                .dropdown-menu.dropdown-menu-right(aria-labelledby="dropdown")
                  a.dropdown-item(href='/users/account') My Account
                  a.dropdown-item(href='/users/logout') Logout
          else
            ul.navbar-nav.ml-auto
              a.nav-link(href='/users/register') Register
              a.nav-link(href='/users/login') Login









    //-nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href='/users/portal') CORPSE
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#headnav' aria-controls='#headnav' aria-expanded='false' aria-label='Toggle Navigation')
        span.navbar-toggler-icon
      #headnav.collapse.navbar-collapse
        .navbar-nav
        if user
          if user.account_type === "seller"
            a.nav-item.nav-link(href='/users/view') Clients
            a.nav-item.nav-link(href='/order') Orders
            a.nav-item.nav-link(href='/inventory') Inventory
          else
            a.nav-item.nav-link(href='/order/inquire') New Order
            a.nav-item.nav-link(href='/payment/checkout') Checkout
            a.nav-link.waves-effect.waves-light(href='/users/contact')
              i.fas.fa-envelope
              |  Contact Us
              span.sr-only (current)
        else
          a.d-lg-none.nav-item.nav-link(href='/users/login') Login
          a.d-lg-none.nav-item.nav-link(href='/users/register') Register
      if !user
        a.d-lg-block.nav-item.nav-link(href='/users/login' style="display: none;") Login
        a.d-lg-block.nav-item.nav-link(href='/users/register' style="display: none;") Register
      else
        nav-item.dropdown
          a
          #navbarDropdownMenuLink-4.nav-link.dropdown-toggle.waves-effect.waves-light(data-toggle='dropdown' aria-haspopup='true' aria-expanded='true')
            i.fas.fa-user
            |  Profile
          .dropdown-menu.dropdown-menu-right.dropdown-default(aria-labelledby='navbarDropdownMenuLink-333')
            a.dropdown-item(href='/users/account') My Account
            a.dropdown-item(href='/users/logout') Logout


    .container-fluid(style="marign: 5px;")
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class='alert alert-danger') #{error.msg}
      block content
    #footer.container-fluid
      br
      hr
      footer
        p Copyright &copy; 2019
  script(src='/popper/popper.min.js')
  script(src='/bjs/bootstrap.min.js')
  script(src='https://js.stripe.com/v3/')
  script(src="https://kit.fontawesome.com/7b14ff4587.js" crossorigin="anonymous")