html(lang="en")
  head
    title ProteinCT
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel='stylesheet' href='/css/bootstrap.min.css')
    link(rel='stylesheet' href='/css/style.css')
    script(type='text/javascript' src="/jquery/jquery.min.js")
  body
    .container-fluid
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='/users/portal') CORPSE
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#headnav' aria-controls='#headnav' aria-expanded='false' aria-label='Toggle Navigation')
          span.navbar-toggler-icon
        #headnav.collapse.navbar-collapse
          .navbar-nav.ml-auto
          if user
            if user.account_type === "seller"
              a.nav-item.nav-link(href='/users/view') Clients
              a.nav-item.nav-link(href='/order') Orders
              a.nav-item.nav-link(href='/inventory') Inventory
              a.nav-item.nav-link(href='/users/logout') Logout
            else
              a.nav-item.nav-link(href='/order/inquire') New Order
              a.nav-item.nav-link(href='/payment/checkout') Checkout
              a.nav-item.nav-link(href='/users/contact') Contact Us
              a.nav-item.nav-link(href='/users/account') My Account
              a.nav-item.nav-link(href='/users/logout') Logout
          else
            a.d-lg-none.nav-item.nav-link(href='/users/login') Login
            a.d-lg-none.nav-item.nav-link(href='/users/register') Register
        if !user
          a.d-lg-block.nav-item.nav-link(href='/users/login' style="display: none;") Login
          a.d-lg-block.nav-item.nav-link(href='/users/register' style="display: none;") Register

    .container-fluid(style="marign: 5px;")
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class='alert alert-danger') #{error.msg}
      block content
    #footer.container-fluid
      br
      hr
      footer
        p Copyright &copy; 2019
  script(src='/popper/popper.min.js')
  script(src='/bjs/bootstrap.min.js')
  script(src='https://js.stripe.com/v3/')
  script(src="https://kit.fontawesome.com/7b14ff4587.js" crossorigin="anonymous")