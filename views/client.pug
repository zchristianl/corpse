extends layout

block content
  h1 Clients
  a.btn.btn-success(href="/users/create" style="float:right; margin-bottom: 5px;")
    span.fas.fa-plus.fa-lg
  form.search-form(action='/users/view')
    input(type='search' name='term' placeholder='Search for Clients...')
    input(type='submit' value='Search')
  table.table.table-striped
    thead
      tr
        th(scope="col") Name
        th(scope="col") Customer Since
        th(scope="col") Paid
        th(scope="col") Due
        th(scope="col")
    tbody
      each user in users
        tr
          td 
            b=user.first_name + " " + user.last_name
            |#[br]
            =user.organization
          -var date = (new Date(user.createdAt)).toLocaleString('en-US', { month: 'long', year: 'numeric' });
          td=date
          td $0.00
          td $0.00
          td
            a.btn.btn-primary(href='/users/view/'+user.id role="button" style="margin-right: 5px;")
              span.far.fa-eye.fa-lg
            a.btn.btn-success(href='/users/edit/'+user.id role="button" style="margin-left: 5px;")
              span.far.fa-edit.fa-lg
