extends layout

block content
  h2 Your Orders
  //a.btn.btn-success(href="" style="float:right; margin-bottom: 5px;") New Order
  //Not ready yet
  .table-responsive
    table.table.table-striped
      thead
        tr
          th(scope="col" style="width: 10%;") Order #
          th(scope="col") Updated
          th(scope="col") Total
          th(scope="col") Status
          th(scope="col") 
      tbody
        each order in orders
          tr(scope="row")
            -var date = (new Date(order.updatedAt)).toLocaleString('en-US', { month: 'long', day: '2-digit', year: 'numeric' });
            td=order.id
            td=date
            if order.amount == 0
              td="TBD"
            else
              td="$"+order.amount
            td=(order.state).charAt(0) + (order.state).substring(1, order.state.length).toLowerCase()
            td(style="text-align: center;")
              if order.state == 'PAYMENT' && order.payment == 'cc'
                form(method="GET" action="/payment/checkout/"+order.id style="float: left;")
                  button.btn.btn-success(type="submit") Pay Now
              form(method="GET" action="/order/view/"+order.id style="margin-left: 5px; float:left;")
                button.btn.btn-primary(type="submit")
                  span.far.fa-eye.fa-sm

